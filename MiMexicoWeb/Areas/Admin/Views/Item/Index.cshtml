<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Item List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Item
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thread>
            <tr>
                <th>name</th>
                <th>description</th>
                <th>price</th>
                <th>meat</th>
            </tr>
        </thread>
    </table>
</div>

@section Scripts{
    <script src="~/js/item.js"></script>
}
