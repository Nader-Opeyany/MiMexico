@model IEnumerable<Condiment>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Condiment List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Condiment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Condiment
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-danger-striped" style="width:100%">
        <thread>
            <tr>
                <th>
                    Meat Name
                </th>
                <br />
            </tr>
        </thread>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Condiment" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Condiment" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


